<?xml version="1.0" encoding="UTF-8"?>
<project name="XIncProc Framework"
         xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <bannerLeft>
        <name><![CDATA[
      <span class="color-highlight">XInclude</span> processor
      ]]>
        </name>
        <href>http://xincproc.etourdot.org</href>
    </bannerLeft>

    <publishDate position="bottom" format="yyyy-MM-dd" />
    <version position="bottom" />

    <skin>
        <groupId>com.bernardomg.maven.skins</groupId>
        <artifactId>docs-maven-skin</artifactId>
        <version>${site.skin.version}</version>
    </skin>

    <custom>
        <skinConfig>
            <keywords>Xinclude, xpointer</keywords>
            <descriptionUrl>XInclude and XPointer tools</descriptionUrl>
            <topNav>
                <menu>Modules</menu>
                <menu>Info and reports</menu>
            </topNav>
            <iconNav>
                <menu>Icons</menu>
            </iconNav>
        </skinConfig>
    </custom>

    <body>
        <menu name="Modules" inherit="bottom">
            <item name="XInclude" href="xinclude/index.html"/>
            <item name="XPointer" href="xpointer/index.html"/>
        </menu>
        <menu name="Info and reports" inherit="bottom">
            <item name="Infos" href="./project-info.html" />
            <item name="Reports" href="./project-reports.html" />
            <item name="JavaDocs" href="./apidocs/index.html" />
        </menu>
        <menu name="Icons" inherit="bottom">
            <item name="Github" img="github" href="https://github.com/etourdot/xincproc" />
        </menu>
    </body>
</project>